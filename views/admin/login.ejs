<!doctype html>
<html lang="en" class="minimal-theme">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/public/img/web-icon.png" type="image/png" />
    <!-- Bootstrap CSS -->
    <link href="/public/admin_site/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/public/admin_site/css/bootstrap-extended.css" rel="stylesheet" />
    <link href="/public/admin_site/css/style.css" rel="stylesheet" />
    <link href="/public/admin_site/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- loader-->
    <link href="/public/admin_site/css/pace.min.css" rel="stylesheet" />

    <title>
        <%=(typeof title != "undefined" ? title : "")%>
    </title>
    <style>
        .warning {
            border: 1px solid red;
        }
    </style>
</head>

<body>

    <!--start wrapper-->
    <div class="wrapper">

        <!--start content-->
        <main class="authentication-content">
            <div class="container-fluid">
                <div class="authentication-card">
                    <div class="card shadow rounded-0 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6 bg-login d-flex align-items-center justify-content-center">
                                <!-- <img src="/public/img/slider-img/mau-anh-1.jpg" class="img-fluid" alt=""> -->
                            </div>
                            <div class="col-lg-6">
                                <div class="card-body p-4 p-sm-5">
                                    <h5 class="card-title">Đăng nhập</h5>
                                    <p class="card-text mb-5"></p>
                                    <hr>
                                    <form class="form-body" method="post"
                                        action="http://localhost:3000/fermeh/admin/login">
                                        <div class="row g-3">
                                            <div class="col-12">
                                                <label for="inputUsername" class="form-label">Tên đăng nhập</label>
                                                <div class="ms-auto position-relative">
                                                    <div
                                                        class="position-absolute top-50 translate-middle-y search-icon px-3">
                                                        <i class="bi bi-person-fill"></i>
                                                    </div>
                                                    <input type="text" class="form-control radius-30 ps-5"
                                                        id="inputUsername" placeholder="Tên đăng nhập" required
                                                        name="username">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <label for="inputChoosePassword" class="form-label">Mật khẩu</label>
                                                <div class="ms-auto position-relative">
                                                    <div
                                                        class="position-absolute top-50 translate-middle-y search-icon px-3">
                                                        <i class="bi bi-lock-fill"></i>
                                                    </div>
                                                    <input type="password" class="form-control radius-30 ps-5"
                                                        id="inputChoosePassword" placeholder="Mật khẩu" required
                                                        name="password">
                                                </div>
                                            </div>
                                            <div class="col-6">
                                            </div>
                                            <div class="col-6 text-end"> <a href="/fermeh/admin/fogot-password">Quên mật
                                                    khẩu ?</a>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <span style="color:red;">
                                                        <%=(typeof error !="undefined" ? error : "" )%>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary radius-30">Đăng
                                                        nhập</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!--end page main-->

    </div>
    <!--end wrapper-->


    <!--plugins-->
    <script src="/public/admin_site/js/jquery.min.js"></script>
    <script src="/public/admin_site/js/pace.min.js"></script>


</body>

</html>